<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:plot="http://oxyplot.org/avalonia"
             xmlns:models="clr-namespace:LibrotechInspection.Core.Models;assembly=LibrotechInspection.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LibrotechInspection.Desktop.Views.DataAnalysisView"
             Background="{DynamicResource LightBackgroundBrush}">
    <UserControl.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="EmergencyListBoxBrush" Color="#FE0909" Opacity="0.6" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- BackgroundImage -->
        <Image Source="/Assets/Images/background-shape.png"
               HorizontalAlignment="Right" />

        <Grid RowDefinitions="Auto,1.8*,*">

            <Border Classes="light"
                    Grid.Row="1"
                    Margin="7,15,7,4">
                <Grid Margin="10" RowDefinitions="6.5*,Auto">

                    <plot:PlotView x:Name="PlotView" />

                    <Grid Grid.Row="1">
                        <StackPanel HorizontalAlignment="Left"
                                    Orientation="Horizontal"
                                    Margin="8,0,0,0">

                            <CheckBox x:Name="ShowTemperatureCheckBox"
                                      Content="Температура"
                                      Height="40" Margin="0,0,15,0" />
                            <CheckBox x:Name="ShowHumidityCheckBox"
                                      Content="Влажность"
                                      Height="40" Margin="0,0,15,0" />
                            <CheckBox x:Name="ShowPressureCheckBox"
                                      Content="Давление"
                                      Height="40" Margin="0,0,15,0" />
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <Button Margin="0,0,8,0"
                                    Click="AlignChartCenter">
                                <Image Margin="1"
                                       Source="/Assets/Icons/icons8-home-48.png" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="2" ColumnDefinitions="1.4*,*">

                <Border Classes="translucent"
                        Background="{StaticResource EmergencyListBoxBrush}"
                        Margin="7,7,7,15">

                    <Grid Margin="2" RowDefinitions="Auto,Auto">

                        <TextBlock Classes="h2 bold"
                                   Margin="5"
                                   TextAlignment="Center"
                                   Text="Тревоги" />

                        <ListBox x:Name="EmergencyEventsListBox"
                                 Grid.Row="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizationMode="None"
                                 Height="230"
                                 Margin="10,5,10,10">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="models:EmergencyEventsSettings">
                                    <Border
                                        Height="30"
                                        Margin="2">
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="3">
                                            <TextBlock Text="{Binding Installation}"
                                                       Margin="3" />
                                            <TextBlock Text="{Binding Type}"
                                                       Margin="3" />
                                            <TextBlock Text="{Binding TimeAllowed}"
                                                       Margin="3" />
                                            <TextBlock Text="{Binding TotalTime}"
                                                       Margin="3" />
                                            <TextBlock Text="{Binding NumberOfAccidents}"
                                                       Margin="3" />
                                            <TextBlock Text="{Binding NumberOfAccidents}"
                                                       Margin="3" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <Border Classes="light"
                        Grid.Column="1"
                        Margin="7,7,7,15">

                    <Grid Margin="6" RowDefinitions="Auto,Auto">

                        <TextBlock Classes="h2 bold"
                                   Margin="5"
                                   TextAlignment="Center"
                                   Text="Краткая сводка" />

                        <Grid Grid.Row="1"
                              Margin="10,5,10,10">

                            <ContentControl x:Name="ShortSummaryContentControl">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <Border Background="{StaticResource LightBackgroundBrush}"
                                                    Height="30"
                                                    Margin="2">
                                                <Grid Margin="2" ColumnDefinitions="*,*">

                                                    <TextBlock Text="Номер сессии:"
                                                               FontWeight="Bold"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"
                                                               Margin="5,0,0,0" />
                                                    <TextBox Grid.Column="1"
                                                             Classes="copyable-text"
                                                             Text="{Binding SessionId}"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Left"
                                                             Margin="5,0,0,0" />
                                                </Grid>
                                            </Border>
                                            <Border Background="{StaticResource LightBackgroundBrush}"
                                                    Height="30"
                                                    Margin="2">
                                                <Grid Margin="2" ColumnDefinitions="*,*">

                                                    <TextBlock Text="Начало сессии:"
                                                               FontWeight="Bold"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"
                                                               Margin="5,0,0,0" />
                                                    <TextBox Grid.Column="1"
                                                             Classes="copyable-text"
                                                             Text="{Binding SessionStart}"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Left"
                                                             Margin="5,0,0,0" />
                                                </Grid>
                                            </Border>
                                            <Border Background="{StaticResource LightBackgroundBrush}"
                                                    Height="30"
                                                    Margin="2">
                                                <Grid Margin="2" ColumnDefinitions="*,*">

                                                    <TextBlock Text="Конец сессии:"
                                                               FontWeight="Bold"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"
                                                               Margin="5,0,0,0" />
                                                    <TextBox Grid.Column="1"
                                                             Classes="copyable-text"
                                                             Text="{Binding SessionEnd}"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Left"
                                                             Margin="5,0,0,0" />
                                                </Grid>
                                            </Border>
                                            <Border Background="{StaticResource LightBackgroundBrush}"
                                                    Height="30"
                                                    Margin="2">
                                                <Grid Margin="2" ColumnDefinitions="*,*">

                                                    <TextBlock Text="Общая длительность:"
                                                               FontWeight="Bold"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"
                                                               Margin="5,0,0,0" />
                                                    <TextBox Grid.Column="1"
                                                             Classes="copyable-text"
                                                             Text="{Binding TotalDuration}"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Left"
                                                             Margin="5,0,0,0" />
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                        </Grid>
                    </Grid>

                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>