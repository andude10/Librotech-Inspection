<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:desktop="clr-namespace:LibrotechInspection.Desktop"
             x:Class="LibrotechInspection.Desktop.App"
             RequestedThemeVariant="Light">
    <Application.DataTemplates>
        <desktop:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <SimpleTheme />

        <!-- OxyPlot UI theme applied. -->
        <StyleInclude Source="avares://OxyPlot.Avalonia/Themes/Default.axaml"></StyleInclude>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
        <StyleInclude Source="/Assets/Styles/Generic.axaml" />
    </Application.Styles>
</Application>