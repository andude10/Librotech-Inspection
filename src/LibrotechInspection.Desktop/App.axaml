<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:LibrotechInspection.Desktop"
             xmlns:desktop="clr-namespace:LibrotechInspection.Desktop"
             x:Class="LibrotechInspection.Desktop.App">
    <Application.DataTemplates>
        <desktop:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        
        <!-- OxyPlot UI theme applied. -->
        <StyleInclude Source="resm:OxyPlot.Avalonia.Themes.Default.xaml?assembly=OxyPlot.Avalonia"/>
        
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml" />
        
        <StyleInclude Source="/Assets/Styles/Generic.axaml"></StyleInclude>
    </Application.Styles>
</Application>