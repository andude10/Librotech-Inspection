<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <CornerRadius x:Key="DefCornerRadius">24</CornerRadius>

    <!-- Colors -->
    <Color x:Key="DropShadowEffectColor" R="30" G="39" B="51" />

    <!-- Brushes -->
    <SolidColorBrush x:Key="MainBrush" Color="#F84100" />
    <SolidColorBrush x:Key="LightFont" Color="White" />
    <SolidColorBrush x:Key="LightBackground" Color="White" />
    <SolidColorBrush x:Key="IconButtonBrush" Color="#5E6C80" />
    <SolidColorBrush x:Key="TranslucentBorderBrush" Opacity="0.4" Color="#FFFFFF" />
    
    <SolidColorBrush x:Key="NavigationButtonBrush" Color="#66768C" />
    <SolidColorBrush x:Key="NavigationButtonBrushHover" Color="#8CA1BF" />

    <!-- Fonts -->
    <sys:Double x:Key="LargeFontSize">18</sys:Double>
    <sys:Double x:Key="RegularFontSize">13</sys:Double>

    <!-- DataAnalysisView.xaml -->
    <SolidColorBrush x:Key="EmergencyListBoxBrush" Color="#FE0909" Opacity="0.6" />
</ResourceDictionary>