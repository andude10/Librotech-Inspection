<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Constants.xaml" />
        <ResourceDictionary Source="GlobalStyles/Borders/Borders.xaml" />
        <ResourceDictionary Source="GlobalStyles/TextBlocks/TextBlocks.xaml" />
        <ResourceDictionary Source="GlobalStyles/Buttons/Buttons.xaml" />
        <ResourceDictionary Source="GlobalStyles/UserControls/UserControls.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Default styles -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource RegularFontSize}" />
    </Style>

</ResourceDictionary>