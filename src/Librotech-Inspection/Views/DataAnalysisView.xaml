<reactiveUi:ReactiveUserControl x:TypeArguments="viewModels1:DataAnalysisViewModel"
                                x:Class="Librotech_Inspection.Views.DataAnalysisView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
                                xmlns:viewModels1="clr-namespace:Librotech_Inspection.ViewModels.Views"
                                xmlns:models="clr-namespace:Librotech_Inspection.Models"
                                xmlns:representatives="clr-namespace:Librotech_Inspection.Utilities.DataDecorators.Representatives"
                                mc:Ignorable="d"
                                d:DesignHeight="750" d:DesignWidth="900"
                                Style="{StaticResource DefUserControl}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource LightBorder}"
                Margin="20,20,20,5">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="6.5*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Content="Загрузить файл"
                        Height="40" Width="194" Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        x:Name="StartAnalysisButton"
                        Style="{StaticResource DefButton}" />

                <oxy:PlotView Grid.Row="1" x:Name="PlotView" />

                <Grid Grid.Row="2">
                    <StackPanel HorizontalAlignment="Left"
                                Orientation="Horizontal"
                                Margin="15,0,0,0">

                        <CheckBox x:Name="ShowTemperatureCheckBox"
                                  Content="Температура"
                                  Height="40" Margin="0,0,18,0" />
                        <CheckBox x:Name="ShowHumidityCheckBox"
                                  Content="Влажность"
                                  Height="40" Margin="0,0,18,0" />
                        <CheckBox x:Name="ShowPressureCheckBox"
                                  Content="Давление"
                                  Height="40" Margin="0,0,18,0" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <Button Content="Выровнять график"
                                Height="40" Width="190" Margin="0,0,15,0"
                                Style="{StaticResource DefButton}"
                                Click="AlignChartCenter" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource LightBorder}"
                    Margin="20,10,10,20"
                    Background="{StaticResource EmergencyListBoxBrush}">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Тревоги"
                               Style="{StaticResource Title}" />

                    <ListView x:Name="EmergencyEventsListView"
                              Grid.Row="1"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="models:EmergencyEvents">
                                <Border CornerRadius="{StaticResource DefCornerRadius}"
                                        Background="{StaticResource LightBackground}"
                                        Margin="10">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="10"
                                                Width="400">
                                        <TextBlock Text="{Binding Installation}"
                                                   Margin="10" />
                                        <TextBlock Text="{Binding Type}"
                                                   Margin="10" />
                                        <TextBlock Text="{Binding TimeAllowed}"
                                                   Margin="10" />
                                        <TextBlock Text="{Binding TotalTime}"
                                                   Margin="10" />
                                        <TextBlock Text="{Binding NumberOfAccidents}"
                                                   Margin="10" />
                                        <TextBlock Text="{Binding NumberOfAccidents}"
                                                   Margin="10" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource TranslucentBorder}"
                    Margin="10,10,20,20">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Краткая сводка"
                               Style="{StaticResource Title}" />

                    <Grid Grid.Row="1"
                          Margin="15">
                        <Grid.Resources>
                            <DataTemplate DataType="{x:Type representatives:ShortSummary}">
                                <StackPanel Margin="10">
                                    <Border Style="{StaticResource LightBorder}"
                                            Height="40"
                                            Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Номер сессии" FontWeight="Bold" />
                                            <TextBlock Text="{Binding SessionId}" />
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource LightBorder}"
                                            Height="40"
                                            Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Начало сессии" FontWeight="Bold" />
                                            <TextBlock Text="{Binding SessionStart}" />
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource LightBorder}"
                                            Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Конец сессии" FontWeight="Bold" />
                                            <TextBlock Text="{Binding SessionEnd}" />
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource LightBorder}"
                                            Height="40"
                                            Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Общая длительность" FontWeight="Bold" />
                                            <TextBlock Text="{Binding TotalDuration}" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </Grid.Resources>
                        <ContentPresenter x:Name="ShortSummaryContentPresenter" />
                    </Grid>
                </Grid>

            </Border>
        </Grid>
    </Grid>
</reactiveUi:ReactiveUserControl>